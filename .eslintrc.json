{
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": ["react", "jest", "prettier", "react-hooks"],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "jest/expect-expect": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": 0,
      "curly": 2,
      "dot-notation": 2,
      "id-length": 2,
      "no-const-assign": 2,
      "no-implicit-coercion": 2,
      "no-eq-null": 2,
      "eqeqeq": 2,
      "no-dupe-class-members": 2,
      "no-else-return": 2,
      "no-inner-declarations": 2,
      "no-lonely-if": 2,
      "no-shadow": 2,
      "no-unneeded-ternary": 2,
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "no-unused-vars": [
        2,
        {
          "args": "none"
        }
      ],
      "react/prop-types": 1,
      "complexity": ["error", 8],
      "max-lines": [
        "error",
        {
          "max": 200,
          "skipComments": true,
          "skipBlankLines": true
        }
      ],
      "max-lines-per-function": [
        "error",
        {
          "max": 200,
          "skipComments": true,
          "skipBlankLines": true
        }
      ],
      "no-useless-return": 2,
      "no-var": 2,
      "one-var": [2, "never"],
      "prefer-arrow-callback": 2,
      "no-console": [
        "error",
        {
          "allow": ["tron"]
        }
      ],
      "prefer-const": 2,
      "prefer-promise-reject-errors": 2,
      "prettier/prettier": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "sort-vars": 1,
      "strict": [2, "global"]
    }
  }